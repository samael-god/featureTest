{
    "plugins": ["prettier", "import", "@typescript-eslint"],
    "extends": ["prettier", "airbnb-base", "airbnb-typescript/base", "plugin:prettier/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "no-debugger": "off",
        "no-console": 0,
        "class-methods-use-this": "off",
        "@typescript-eslint/no-explicit-any": "error",
        "@typescript-eslint/no-var-requires": 0,
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": false,
                "printWidth": 120
            }
        ]
    }
}
